{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "Node",
        "target": "ES2015",
        "allowJs": true,
        // This compiler run should
        // only output d.ts files
        "emitDeclarationOnly": true,
        // Generate d.ts files
        "declaration": true
    },
    "include": ["./src/**/*", "index.d.ts"]
}